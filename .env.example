PURCHASE_WALLET_PREPROD_MNEMONIC=
SELLING_WALLET_PREPROD_MNEMONIC=
COLLECTION_WALLET_PREPROD_ADDRESS=

# Note: Place your Firebase service account JSON at ./secrets/firebase-adminsdk.json