FIREBASE_CREDENTIALS_JSON=./secrets/firebase-adminsdk.json
FIREBASE_DB_URL=https://your-project.firebaseio.com
HMAC_KEY=replace_with_hmac_key
INGEST_PORT=8080
PAYMENTS_PORT=8081
TICK_INTERVAL_SECONDS=60
RELEASE_THRESHOLD_CENTS=100
RELEASE_BATCH_LIMIT_CENTS=1000

# Masumi payment service integration
MASUMI_API_BASE_URL=http://masumi-payment-service:3001/api/v1
MASUMI_API_KEY=replace_with_masumi_admin_api_key
MASUMI_NETWORK=Preprod
MASUMI_AGENT_IDENTIFIER=agent_identifier_from_registry
MASUMI_PAYMENT_POLL_SECONDS=30

# Masumi node secrets (also used by dockerized registry/payment services)
ADMIN_KEY=replace_with_secure_admin_key
ENCRYPTION_KEY=replace_with_32_char_encryption_key
BLOCKFROST_API_KEY_PREPROD=replace_with_blockfrost_key
